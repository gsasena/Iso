<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
        	<gradient
                android:startColor="#6df380"
                android:endColor="#0cc526"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#282a2f" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
    <item>
        <shape>
        <gradient
        android:angle="270"
        android:centerColor="#ebebeb"
        android:endColor="#dddddd" 
        android:startColor="#faf7f0"
		 />
            <stroke
                android:width="0dp"
                android:color="#282a2f" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />

        </shape>
    </item>
</selector>